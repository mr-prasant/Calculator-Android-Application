<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="19dp"
        android:paddingHorizontal="12dp"
        android:textColor="#5D5D5E"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bcspceContainer"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="24dp"
        android:paddingHorizontal="16dp"
        android:text=""
        android:textColor="#98A6FF"
        android:textAlignment="textEnd"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_container"
        android:gravity="end"
        android:orientation="horizontal"
        android:id="@+id/bcspceContainer"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:layout_marginTop="20dp"
            android:textColor="#A39595"
            android:layout_marginRight="205dp"
            android:text="developed by\n@prasant" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonBackspace"
            android:background="@drawable/backspace_vector"
            android:layout_margin="14dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/button_container"
        android:layout_marginBottom="0dp"
        android:layout_marginHorizontal="12dp"
        android:background="#AFAFAF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F8F8F8"
        android:paddingVertical="5dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="C"
                android:textColor="#FF0000"
                android:backgroundTint="#FFC4C4"
                android:textSize="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginHorizontal="6dp"
                android:id="@+id/buttonC"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="("
                android:textColor="#FF8C00"
                android:backgroundTint="#FFEAD2"
                android:textSize="20dp"
                android:layout_marginHorizontal="6dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="7dp"
                android:id="@+id/buttonBrace1"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text=")"
                android:textColor="#FF8C00"
                android:backgroundTint="#FFEAD2"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginHorizontal="6dp"
                android:id="@+id/buttonBrace2"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="/"
                android:textColor="#BF02EA"
                android:backgroundTint="#F2DAFF"
                android:textSize="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginHorizontal="6dp"
                android:id="@+id/buttonDivision"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="7"
                android:textColor="#673AB7"
                android:backgroundTint="#F1F1F1"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/button7"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="8"
                android:textColor="#673AB7"
                android:backgroundTint="#F1F1F1"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/button8"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="9"
                android:textColor="#673AB7"
                android:backgroundTint="#F1F1F1"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/button9"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="*"
                android:textColor="#BF02EA"
                android:backgroundTint="#F2DAFF"
                android:textSize="25dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/buttonMultiply"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="4"
                android:textColor="#673AB7"
                android:backgroundTint="#F1F1F1"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/button4"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="5"
                android:textColor="#673AB7"
                android:backgroundTint="#F1F1F1"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/button5"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="6"
                android:textColor="#673AB7"
                android:backgroundTint="#F1F1F1"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/button6"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="-"
                android:textColor="#BF02EA"
                android:backgroundTint="#F2DAFF"
                android:textSize="25dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/buttonMinus"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="1"
                android:textColor="#673AB7"
                android:backgroundTint="#F1F1F1"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/button1"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="2"
                android:textColor="#673AB7"
                android:backgroundTint="#F1F1F1"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/button2"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="3"
                android:textColor="#673AB7"
                android:backgroundTint="#F1F1F1"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/button3"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="+"
                android:textColor="#BF02EA"
                android:backgroundTint="#F2DAFF"
                android:textSize="25dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/buttonAddition"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="."
                android:textSize="20dp"
                android:textColor="#673AB7"
                android:backgroundTint="#F1F1F1"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/buttonPoint"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="0"
                android:textColor="#673AB7"
                android:backgroundTint="#F1F1F1"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/button0"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="176dp"
                android:layout_height="76dp"
                app:cornerRadius="38dp"
                android:text="="
                android:textSize="25dp"
                android:backgroundTint="#707FFD"
                android:layout_marginBottom="10dp" android:layout_marginTop="7dp" android:layout_marginHorizontal="6dp"
                android:id="@+id/buttonEquals"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>